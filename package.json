{
  "name": "cousinade",
  "version": "0.0.1",
  "description": "projet cousinade baudry front",
  "author": "bentowski",
  "license": "MIT",
  "source": "src/html/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/bentowski/cousinade"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "parcel",
    "build": "npm run clean && parcel build --no-source-maps",
    "serve": "npx serve dist",
    "clean": "rimraf -rf ./.parcel-cache && rimraf -rf ./dist",
    "prettier": "prettier --write 'src/**/*.html'",
    "stylelint": "stylelint --fix './**/*.css'",
    "xo": "xo  --env=browser --fix",
    "format": "npm run clean && npm run prettier && npm run stylelint && npm run xo"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "husky": "^4.3.8",
    "parcel": "^2.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-group-selectors": "^1.0.8",
    "xo": "^0.45.0"
  },
  "prettier": {
    "printWidth": 130
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "rules": {
      "node/prefer-global/process": 0
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": true
      }
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-color-format",
      "stylelint-group-selectors"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-type-no-unknown": null,
      "no-descending-specificity": null,
      "plugin/stylelint-group-selectors": true,
      "color-format/format": {
        "format": "hsl"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
